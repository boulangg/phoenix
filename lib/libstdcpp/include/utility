#ifndef __UTILITY__
#define __UTILITY__

#include <cstddef>

namespace std {

template< class T >
void swap( T& a, T& b ) {
	T tmp = a;
	a = b;
	b = tmp;
}

size_t nearest_power_2(size_t num);

}

#endif // __UTILITY__
