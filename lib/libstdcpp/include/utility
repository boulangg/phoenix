#ifndef __UTILITY__
#define __UTILITY__

#include <cstddef>
#include <type_traits>

namespace std {

template< class T >
void swap( T& a, T& b ) {
	T tmp = a;
	a = b;
	b = tmp;
}

size_t nearest_power_2(size_t num);

template<typename T>
constexpr typename std::remove_reference<T>::type&& move(T&& t) {
	return static_cast<typename std::remove_reference<T>::type&&>(t);
}

}

#endif // __UTILITY__
